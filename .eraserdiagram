      }

    }
  }
}

// // Relations
user <> ui: direct use
user <> cli: direct call
user <> api: HTTP request

ui > Entrypoint: direct call
api > Entrypoint: direct call
cli > Entrypoint: direct call

suggest_filename > suggest_filename_crew
suggest_directory > suggest_directory_crew

suggest_filename_crew < analyse_file_agent: has
suggest_filename_crew < suggest_filename_agent: has

suggest_filename_crew < analyse_file_task: has
suggest_filename_crew < suggest_filename_task: has

suggest_directory_crew < analyse_file_agent: has
suggest_directory_crew < suggest_directory_agent: has

suggest_directory_crew < analyse_file_task: has
suggest_directory_crew < suggest_directory_task: has

analyse_file_agent < FileReadTool: has
analyse_file_agent < DoclingMarkdownTool: has
analyse_file_agent < DoclingTextTool: has

analyse_file_task < analyse_file_agent: has
suggest_filename_task < suggest_filename_agent: has
suggest_directory_task < suggest_directory_agent: has
